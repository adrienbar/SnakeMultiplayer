<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snakeindustry.snakemultiplayer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name=".generalApp.mainActivity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".generalApp.player.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".generalApp.NetworkModeAndGameSettings"
            android:label="@string/title_activity_network_mode_and_game_settings" >
        </activity>
        <activity
            android:name=".generalApp.player.stats.GameStatsActivity"
            android:label="@string/title_activity_game_stats" >
        </activity>
    </application>

</manifest>
